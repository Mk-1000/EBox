# Server Configuration
PORT=3000
NODE_ENV=production
SESSION_SECRET=your_strong_random_secret_here_change_this

# Database Configuration (MySQL)
# For production, use a managed MySQL service like:
# - PlanetScale (recommended for Vercel)
# - Aiven
# - Railway
# - AWS RDS
# - Google Cloud SQL

DB_HOST=your_mysql_host_here
DB_PORT=3306
DB_USER=your_mysql_username
DB_PASSWORD=your_mysql_password
DB_DATABASE=your_database_name

# SSL Configuration (set to true for production)
DB_SSL=true
DB_SSL_REJECT_UNAUTHORIZED=false

# Example for PlanetScale:
# DB_HOST=aws.connect.psdb.cloud
# DB_PORT=3306
# DB_USER=your_username
# DB_PASSWORD=your_password
# DB_DATABASE=your_database
# DB_SSL=true
# DB_SSL_REJECT_UNAUTHORIZED=false
